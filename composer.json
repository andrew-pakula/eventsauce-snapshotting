{
    "name": "andreo/eventsauce-snapshotting",
    "description": "Extended EventSauce snapshot components.",
    "keywords": [
        "eventsauce",
        "components",
        "snapshotting"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Andrzej Pakula",
            "email": "andrze.pakula@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "doctrine/dbal": "^3.1",
        "eventsauce/eventsauce": "^1.2",
        "eventsauce/uuid-encoding": "^0.2.0"
    },
    "require-dev": {
        "eventsauce/test-utilities": "dev-main",
        "phpstan/phpstan": "^1.3",
        "phpunit/phpunit": "^9.4",
        "roave/security-advisories": "dev-latest",
        "andreo/eventsauce-generate-migration": "*"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Andreo\\EventSauce\\Snapshotting\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "repositories": [
        {
            "url": "https://github.com/andrew-pakula/eventsauce-generate-migration.git",
            "type": "git"
        }
    ]
}
