{
    "name": "andreo/eventsauce-snapshotting",
    "description": "Extended snapshot components for EventSauce.",
    "keywords": [
        "eventsauce",
        "components",
        "snapshotting"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Andrzej Pakula",
            "email": "andrze.pakula@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "doctrine/dbal": "^3.1",
        "eventsauce/eventsauce": "^2.0",
        "eventsauce/uuid-encoding": "^0.3"
    },
    "require-dev": {
        "andreo/eventsauce-aggregate": "dev-main",
        "andreo/eventsauce-generate-migration": "dev-main",
        "eventsauce/test-utilities": "^2.0",
        "phpstan/phpstan": "^1.3",
        "phpunit/phpunit": "^9.4",
        "roave/security-advisories": "dev-latest"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Andreo\\EventSauce\\Snapshotting\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev"
}
